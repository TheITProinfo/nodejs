generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Employee {
  id         String       @id @default(uuid())
  employeeNo String       @unique
  firstName  String
  lastName   String
  email      String?      @unique
  isActive   Boolean      @default(true)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  attendances Attendance[]
   workTimes   WorkTime[] 
}

model Attendance {
  id          String    @id @default(uuid())
  employeeId  String
  workDate    DateTime
  checkIn     DateTime?
  checkOut    DateTime?
  status      AttendanceStatus @default(PRESENT)
  note        String?

  createdAt   DateTime  @default(now())

  employee    Employee  @relation(fields: [employeeId], references: [id])

  @@index([employeeId])
  @@unique([employeeId, workDate]) // one attendance per employee per day
}
enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  SICK
  VACATION
}
model WorkTime {
  id           String   @id @default(uuid())
  employeeId   String
  workDate     DateTime

  // 计算结果（分钟更稳定）
  workMinutes  Int      @default(0)
  breakMinutes Int      @default(0)   // 午休等，可选
  otMinutes    Int      @default(0)   // 加班，可选

  // 方便对账/审计
  ruleVersion  String?              // 例如 "v1"
  note         String?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  employee     Employee @relation(fields: [employeeId], references: [id])

  @@unique([employeeId, workDate])
  @@index([employeeId])
}

